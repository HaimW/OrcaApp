rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own dive entries
    match /diveEntries/{entryId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.token.email == 'admin@orca.com' ||
         request.auth.token.email.matches('.*admin.*'));
    }
    
    // Allow authenticated users to read all dive entries (for now)
    match /diveEntries/{entryId} {
      allow read: if request.auth != null;
    }
    
    // Allow admin users to read and write all dive entries
    match /diveEntries/{entryId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email == 'admin@orca.com' ||
         request.auth.token.email.matches('.*admin.*'));
    }
  }
}
